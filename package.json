{
  "name": "subtitle-dcl",
  "version": "1.0.0",
  "description": "Stream-based library for parsing and manipulating subtitles. Port for Dcl SDK Library",
  "main": "./dist/index.js",
  "scripts": {
    "build": "rollup -c --environment BUILD:production",
    "link": "npm link && rollup --watch -c --environment BUILD:production",
    "test": "tsdx test",
    "test:coverage": "tsdx test --coverage",
    "lint:fix": "tsdx lint",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "coveralls": "tsdx test --coverage && coveralls < coverage/lcov.info"
  },
  "typings": "./dist/index.d.ts",
  "decentralandLibrary": {
    "main": "./dist/index.js"
  },
  "keywords": [
    "dcl",
    "decentraland",
    "sdk",
    "library",
    "subtitle",
    "webvtt",
    "srt",
    "vtt",
    "captions",
    "subrip",
    "parse",
    "parser",
    "stringify",
    "validate",
    "validation",
    "stream",
    "streams",
    "read",
    "write",
    "map",
    "filter"
  ],
  "author": "-",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/$author/$name"
  },
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/jest": "^27.4.1",
    "@types/split2": "^2.1.6",
    "decentraland-ecs": "latest",
    "husky": "^4.2.5",
    "tsdx": "^0.13.3",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2"
  },
  "jest": {
    "verbose": true
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0",
    "yarn": "please use npm"
  }
}
